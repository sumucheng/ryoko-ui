* { 
    padding: 0;
    box-sizing: border-box;
    outline: 0;
    -webkit-tap-highlight-color: transparent;
}

html {
    -webkit-text-size-adjust: none;
    -webkit-font-smoothing: antialiased;
}
body, html {
    height: 100%;
} 
a {
    text-decoration: none;
}
button {
    border-style: none;
    cursor: pointer;
}
ul, ol{
    list-style: none;
}
li{
    margin: 0.3em;
}
button, input{
    font: inherit;
}
:focus{
    outline: none;
}
.demo-container{
    margin-top: 20px;
}
